<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music Recommendations</title>

  <link rel="stylesheet" type="text/css" href="Home/MUCE.css">
</head>

<body>

  <div class="parallax"></div>

  <h2 class="heading">Music Recommendations</h2>

  <div class="content">

    <% if (recommendations.length > 0) { %>
      <div class="iframe-container">
        <% recommendations.forEach(function(recommendation, index) { %>
          <!-- Generate Spotify iframe based on the Spotify link -->
          <iframe
            style="border-radius: 12px"
            src="<%= recommendation['Spotify Embed'] %>"
            width="100%"
            height="352"
            frameborder="0"
            allowfullscreen=""
            allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
            loading="lazy"
          ></iframe>
        <% }); %>
      </div>
    <% } 
    
    else { %>
      <h3>No recommendations found.</h3>
    <% } %>

  </div>

</body>

</html>